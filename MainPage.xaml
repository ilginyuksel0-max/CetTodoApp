<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CetTodoApp.Models"
             xmlns:conv="clr-namespace:CetTodoApp.Converters"
             x:Class="CetTodoApp.MainPage"
             Title="Todo List">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:OverdueToColorConverter x:Key="OverdueToColorConverter" />
            <conv:CompletedToTextDecorationConverter x:Key="CompletedToTextDecorationConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*" Padding="10">

        <!-- Task ekleme alanÄ± -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10">
            <Entry x:Name="TitleEntry" Placeholder="Task title" WidthRequest="200"/>
            <DatePicker x:Name="DueDatePicker"/>
            <Button Text="Add" Clicked="OnAddTaskClicked"/>
        </HorizontalStackLayout>

        <!-- Liste -->
        <ScrollView Grid.Row="2">
            <CollectionView x:Name="TasksCollectionView" ItemsSource="{Binding Tasks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:TaskItem">
                        <Frame Padding="10" Margin="5">
                            <VerticalStackLayout>

                                <!-- Title -->
                                <Label Text="{Binding Title}"
                                       FontSize="16"
                                       TextColor="{Binding ., Converter={StaticResource OverdueToColorConverter}}"
                                       TextDecorations="{Binding IsCompleted, Converter={StaticResource CompletedToTextDecorationConverter}}"/>

                                <!-- Due date -->
                                <Label Text="{Binding DueDate, StringFormat='Due: {0:dd/MM/yyyy}'}"
                                       FontSize="12"
                                       TextColor="{Binding ., Converter={StaticResource OverdueToColorConverter}}"/>

                                <!-- Complete & Delete Buttons -->
                                <HorizontalStackLayout Spacing="10">
                                    <Button Text="Complete"
                                            Clicked="OnToggleCompleteClicked"
                                            CommandParameter="{Binding .}" />
                                    <Button Text="Delete"
                                            Clicked="OnDeleteClicked"
                                            CommandParameter="{Binding .}" />
                                </HorizontalStackLayout>

                            </VerticalStackLayout>
                        </Frame>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
